@model IEnumerable<CMS.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}    
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a asp-action="Create" class="btn btn-outline-success  me-2 mb-2">Create New</a>
</div>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoctorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Charges)
            </th>
            <th>Actions</th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Charges)
            </td>
            <td>
                <!-- Details-->
                <a asp-action="Details" asp-route-id="@item.DoctorID"  class="btn btn-sm btn-outline-secondary">
                    Detail
                </a>

                <!-- Edit-->
                <a asp-action="Edit" asp-route-id="@item.DoctorID" class="btn btn-sm btn-outline-warning">
                    Edit
                </a>
               
                <!-- Delete-->
                <a asp-action="Delete" asp-route-id="@item.DoctorID" class="btn btn-sm btn-outline-danger">
                    Delete
                </a>

            </td>
        </tr>
}
    </tbody>
</table>
